{
  "name": "cumulocity-device-chart-widget-plugin",
  "version": "1.0.0",
  "description": "This is the Cumulocity module federation plugin. Plugins can be developed like any Cumulocity application, but can be used at runtime by other applications. Therefore, they export an Angular module which can then be imported by any other application. The exports are defined in `package.json`:",
  "scripts": {
    "start": "c8ycli server --env.beta=true -u https://appbuilder.eu-latest.cumulocity.com/",
    "build": "c8ycli build --env.mode=production",
    "deploy": "c8ycli deploy",
    "postinstall": "ngcc",
    "prebuild": " gulp clean",
    "postbuild": " gulp bundle"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@angular/animations": "12.2.14",
    "@angular/cdk": "12.2.13",
    "@angular/common": "12.2.14",
    "@angular/compiler": "12.2.14",
    "@angular/core": "12.2.14",
    "@angular/forms": "12.2.14",
    "@angular/platform-browser": "12.2.14",
    "@angular/platform-browser-dynamic": "12.2.14",
    "@angular/router": "12.2.14",
    "@angular/upgrade": "12.2.14",
    "@c8y/client": "1015.0.109",
    "@c8y/ngx-components": "1015.0.109",
    "@ngx-translate/core": "13.0.0",
    "rxjs": "~6.6.3",
    "zone.js": "~0.11.4",
    "@c8y/style": "1015.0.109",
    "chart.js": "2.9.3",
    "ng2-charts": "2.4.2",
    "ngx-bootstrap": "6.2.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "12.2.14",
    "@angular/compiler-cli": "12.2.14",
    "@angular/language-service": "12.2.14",
    "@angular/service-worker": "12.2.14",
    "@angular/localize": "12.2.14",
    "@types/jest": "^27.0.3",
    "@types/webpack": "^5.28.0",
    "file-loader": "^6.2.0",
    "jest": "^27.4.5",
    "jest-preset-angular": "^11.0.1",
    "typescript": "4.2.4",
    "@c8y/cli": "1015.0.109",
    "gulp": "^4.0.2",
    "gulp-zip": "^5.0.1"
  },
  "c8y": {
    "application": {
      "name": "Device Chart Runtime Widget",
      "contextPath": "device-chart-runtime-widget",
      "key": "device-chart-runtime-widget-application-key",
      "globalTitle": "Cumulocity Device Chart Widget with Module Federation",
      "tabsHorizontal": true,
      "isPackage": true,
      "noAppSwitcher": true,
      "package": "plugin",
      "requiredPlatformVersion": ">=1015.0.0",
      "icon": {
        "class": "fa fa-bar-chart"
      },
      "exports": [
        {
          "name": "Cumulocity Device Chart Widget Plugin",
          "module": "GpLibDeviceChartModule",
          "path": "./widget/gp-lib-device-chart.module.ts",
          "description": "This widget displays the chart based on the device specific inventory data."
        }
      ],
      "remotes": {
        "widget-plugin": [
          "GpLibDeviceChartModule"
        ]
      }
    },
    "cli": {}
  },
  "browserslist": [
    "last 2 major versions"
  ]
}
